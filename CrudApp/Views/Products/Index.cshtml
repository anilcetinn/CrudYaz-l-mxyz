@model List<Product>
@{
}

<h2 class="text-center mb-5">Ürün Listesi</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Ürün Ekle</a>
    </div>
    <div class="col">
            
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün İsmi</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            
            <th>Tarih</th>
            <th>Eylem</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>@(product.Price)TL</td>
                <td>@product.Description</td>
                
                <td>@product.CreatedTime.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Edit"
                        asp-route-id="@product.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Delete"
                       asp-route-id="@product.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>