@model CrudApp.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Kaydol</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Username">Kullanıcı Adı</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Şifre</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Şifreyi Tekrarlayınız</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydol" class="btn btn-primary" />
    </div>
</form>

<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
